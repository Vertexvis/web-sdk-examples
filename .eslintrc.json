{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["html", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "settings": {
    "html/report-bad-indent": "error",
    "html/indent": "+2"
  }
}
